<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="center_vertical"
	android:orientation="vertical"
	android:paddingLeft="@dimen/edittext_padding"
	android:paddingRight="@dimen/edittext_padding"
	android:paddingTop="@dimen/dialog_margin_below_title">

	<com.google.android.material.textfield.TextInputLayout
		android:id="@+id/group_desc_dialog_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="@string/change_group_description"
		app:endIconMode="clear_text">

		<ch.threema.app.ui.ComposeEditText
			android:id="@+id/group_desc_edit_text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:focusable="true"
			android:imeActionLabel="@string/menu_done"
			android:inputType="text|textMultiLine"
			android:maxLength="1024"
			android:maxLines="6"
			android:nextFocusRight="@+id/groupDescDialog"
			android:singleLine="false"
			android:textColor="?attr/colorOnBackground"
			android:textStyle="normal" />

		<requestFocus />

	</com.google.android.material.textfield.TextInputLayout>

</LinearLayout>
